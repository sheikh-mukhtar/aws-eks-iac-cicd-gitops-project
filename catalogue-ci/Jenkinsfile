pipeline {
    agent  {
        label 'AGENT-1'
    }
    environment { 
        appVersion = ''
        REGION = "us-east-1"
        ACC_ID = "468236363049"
        PROJECT = "roboshop"
        COMPONENT = "catalogue"
    }
    options {
        timeout(time: 30, unit: 'MINUTES') 
        disableConcurrentBuilds()
    }
    parameters {
        booleanParam(name: 'deploy', defaultValue: false, description: 'Toggle this value')
    }
    // Build
    stages {
        stage('Read package.json') {
            steps {
                        script {
                            def packageJson = readJSON file: 'catalogue-ci/package.json'
                            appVersion = packageJson.version
                            echo "Package version: ${appVersion}"
                        }   
                   
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('catalogue-ci') {
                    script {
                    sh """
                            npm install
                    """
                    }
                }    
            }
        }
        stage('Unit Testing') {
            steps {
                script {
                   sh """
                        echo "unit tests"
                   """
                }
            }
        }
        /* stage('Sonar Scan') {
            environment {
                scannerHome = tool 'sonar-7.2'
            }
            steps {
                script {
                   // Sonar Server envrionment
                   withSonarQubeEnv(installationName: 'sonar-7.2') {
                         sh "${scannerHome}/bin/sonar-scanner"
                   }
                }
            }
        } */
        // Enable webhook in sonarqube server and wait for results
        /* stage("Quality Gate") {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                waitForQualityGate abortPipeline: true }
            }
        } */
       /* stage('Check Dependabot Alerts') {
            environment { 
                GITHUB_TOKEN = credentials('github-token')
            }
            steps {
                script {
                    // Fetch alerts from GitHub
                    def response = sh(
                        script: """
                            curl -s -H "Accept: application/vnd.github+json" \
                                 -H "Authorization: token ${GITHUB_TOKEN}" \
                                 https://api.github.com/repos/daws-84s/catalogue/dependabot/alerts
                        """,
                        returnStdout: true
                    ).trim()

                    // Parse JSON
                    def json = readJSON text: response

                    // Filter alerts by severity
                    def criticalOrHigh = json.findAll { alert ->
                        def severity = alert?.security_advisory?.severity?.toLowerCase()
                        def state = alert?.state?.toLowerCase()
                        return (state == "open" && (severity == "critical" || severity == "high"))
                    }

                    if (criticalOrHigh.size() > 0) {
                        error "❌ Found ${criticalOrHigh.size()} HIGH/CRITICAL Dependabot alerts. Failing pipeline!"
                    } else {
                        echo "✅ No HIGH/CRITICAL Dependabot alerts found."
                    }
                }
            }
        }*/
        stage('Docker Build') {
            steps {
                dir('catalogue-ci') {
                    script {
                        withAWS(credentials: 'aws-creds', region: 'us-east-1') {
                            sh """
                                aws ecr get-login-password --region ${REGION} | docker login --username AWS --password-stdin ${ACC_ID}.dkr.ecr.us-east-1.amazonaws.com
                                docker build -t ${ACC_ID}.dkr.ecr.us-east-1.amazonaws.com/${PROJECT}/${COMPONENT}:${appVersion} .
                                docker push ${ACC_ID}.dkr.ecr.us-east-1.amazonaws.com/${PROJECT}/${COMPONENT}:${appVersion}
                            """
                        }
                   }
                }     
            }
        }
        stage('Check Scan Results') {
  steps {
    script {
      withAWS(credentials: 'aws-creds', region: "${REGION}") {
        // Use a bash script to handle AWS CLI errors gracefully
        def output = sh(script: """
          set -euo pipefail
          REPO="${PROJECT}/${COMPONENT}"
          TAG="${appVersion}"
          REGION="${REGION}"

          echo "Checking image existence for ${REPO}:${TAG}..."
          if ! aws ecr describe-images --repository-name "${REPO}" --image-ids imageTag="${TAG}" --region "${REGION}" >/dev/null 2>&1; then
            echo "IMAGE_NOT_FOUND"
            exit 0
          fi

          echo "Image exists. Starting image scan (idempotent)..."
          aws ecr start-image-scan --repository-name "${REPO}" --image-id imageTag="${TAG}" --region "${REGION}" >/dev/null 2>&1 || true

          # Poll for scan status up to ~5 minutes
          for i in \$(seq 1 30); do
            status=$(aws ecr describe-image-scan-findings --repository-name "${REPO}" --image-id imageTag="${TAG}" --region "${REGION}" --query 'imageScanStatus.status' --output text 2>/dev/null || echo "MISSING")
            echo "poll #\$i: scan status=\$status"
            if [ "\$status" = "COMPLETE" ]; then
              aws ecr describe-image-scan-findings --repository-name "${REPO}" --image-id imageTag="${TAG}" --region "${REGION}" --output json
              exit 0
            fi
            if [ "\$status" = "IN_PROGRESS" ]; then
              sleep 10
              continue
            fi
            # missing or other, wait a bit and retry
            sleep 5
          done

          echo "SCAN_TIMEOUT"
          exit 0
        """, returnStdout: true).trim()

        // Handle results in Groovy
        if (output == "IMAGE_NOT_FOUND") {
          error("ECR image ${PROJECT}/${COMPONENT}:${appVersion} not found — fix image push.")
        } else if (output.contains("SCAN_TIMEOUT")) {
          error("Image scan did not finish within timeout.")
        } else {
          // Expect JSON output from describe-image-scan-findings
          def json = readJSON text: output
          def findings = json.imageScanFindings?.findings ?: []
          def highCritical = findings.findAll { it.severity == 'HIGH' || it.severity == 'CRITICAL' }
          if (highCritical.size() > 0) {
            echo "❌ Found ${highCritical.size()} HIGH/CRITICAL vulnerabilities"
            highCritical.each { f -> echo " - ${f.name ?: f.description} : ${f.severity} (${f.attributes ?: ''})" }
            currentBuild.result = 'FAILURE'
            error("Build failed due to HIGH/CRITICAL ECR image vulnerabilities.")
          } else {
            echo "✅ No HIGH/CRITICAL vulnerabilities found."
          }
        }
      } // withAWS
    } // script
  } // steps
} // stage

       
       /* stage('Trigger Deploy') {
            when{
                expression { params.deploy }
